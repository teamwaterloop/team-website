<style>
p.content {
  font-size: 120%;
}
</style>

<nav>
    <div class="nav-wrapper black">
      <div class="col s12">
        <a href="/flock" class="breadcrumb">Flock</a>
        <a href="/flock/<%= goose.url %>" class="breadcrumb"><%= goose.name %></a>
      </div>
    </div>
  </nav>
<div class="parallax-container">
  <div class="parallax"><img class="responsive-img" src="<%= goose.banner %>" alt="Goose banner"></div>
</div>
<div class="section white">
  <div class="row container">
    <h2 class="header"><%= goose.name %></h2>
    <p class="grey-text text-darken-3 lighten-3"><%= goose.desc %></p>
  </div>
</div>
<% for(var i in goose.sections) { %>
  <% if('parallax' in goose.sections[i]) { %>
    <div class="parallax-container">
      <div class="parallax"><img class="responsive-img pimg" src="<%= goose.sections[i].parallax %>" alt="Goose features"></div>
    </div>
  <% } %>
  <div class="section white">
    <div class="row container">
      <% if(!('parallax' in goose.sections[i])) { %>
        <hr>
      <% } %>
      <h2 class="header"><%= goose.sections[i].title %></h2>
      <% for(var j in goose.sections[i].content) { %>
        <p class="content"><%- goose.sections[i].content[j] %></p>
      <% } %>
      <% if('img' in goose.sections[i]) { %>
      <% for(var j = 0; j < goose.sections[i].img.length; j++) { %>
        <img class="responsive-img" src="<%= goose.sections[i].img[j] %>" alt="Goose features">
      <% } %>
      <% } %>
    </div>
  </div>
<% } %>

<script>
$(function(){
  $('.parallax').parallax();
});
</script>
